@page "/"
@page "/home"

@inject AuthenticationStateProvider authStateProvider
@inject NavigationManager NavigationManager
@inject IDialogService DialogService
@inject ISnackbar Snackbar
@inject IJSRuntime JSRuntime

<AuthorizeView>
    <Authorized>
        @{
            //NavigationManager.NavigateTo("/dashboard", true);
        }
    </Authorized>

    <NotAuthorized>

        <MudLayout>
            <MudAppBar Elevation="0">
                <MudImage Src="media\images\0x101-Cyber-Security-Dark-Big.png" Alt="Favicon" Width="24" Height="24" Class="ml-2" />
                <MudText Typo="Typo.h5" Class="ml-3">NetLock RMM</MudText>                
            </MudAppBar>

            <MudContainer MaxWidth="MaxWidth.Medium" Class="mx-auto mt-5">
                <MudCard Class="bg-transparent shadow-none">
                    <MudCardContent Class="p-5 bg-white">
                        <MudText Typo="Typo.h4" Class="mb-4 text-center">
                            Already have a account? Login now!
                        </MudText>

                        <MudForm>

                            <MudButton Variant="Variant.Filled" Color="Color.Default" Class="mt-4" Href="/login" FullWidth="true">Login</MudButton>

                        </MudForm>

                    </MudCardContent>
                </MudCard>

                <MudCard Class="mt-5">
                    <MudCardContent Class="p-5 bg-white">
                        <MudText Typo="Typo.h4" Class="mb-4 text-center">
                            Not a member yet? Register now!
                        </MudText>

                        <MudForm>

                            <MudButton Variant="Variant.Filled" Color="Color.Default" Class="mt-4" Href="/register" FullWidth="true">Register</MudButton>

                        </MudForm>

                    </MudCardContent>
                </MudCard>
            </MudContainer>

            <MudAppBar Bottom="true" Fixed="true" Color="Color.Default" Elevation="1">
                <MudSpacer />
                <MudIconButton Href="https://discord.gg/HqUpZgtX4U" Target="_blank" Icon="@Icons.Custom.Brands.Discord" Color="Color.Inherit" Edge="Edge.End" />
                <MudLink Color="Color.Default" Href="https://discord.gg/HqUpZgtX4U" Target="_blank" Class="ml-1">Discord</MudLink>
                <MudIconButton Href="https://github.com/0x101-Cyber-Security/NetLock-RMM" Target="_blank" Icon="@Icons.Custom.Brands.GitHub" Color="Color.Inherit" Edge="Edge.End" />
                <MudLink Color="Color.Default" Href="https://github.com/0x101-Cyber-Security/NetLock-RMM" Target="_blank" Class="ml-1">GitHub</MudLink>
                <MudIconButton Href="https://docs.netlockrmm.com/en/home" Target="_blank" Icon="@Icons.Material.Filled.MenuBook" Color="Color.Inherit" Edge="Edge.End" />
                <MudLink Color="Color.Default" Href="https://docs.netlockrmm.com/en/home" Target="_blank" Class="ml-1">Docs</MudLink>
                <MudIconButton Href="https://netlockrmm.com/imprint.html" Target="_blank" Icon="@Icons.Material.Filled.LocationCity" Color="Color.Inherit" Edge="Edge.End" />
                <MudLink Color="Color.Default" Href="https://netlockrmm.com/imprint.html" Target="_blank" Class="ml-1">Imprint</MudLink>
                <MudIconButton Href="https://netlockrmm.com/imprint.html" Target="_blank" Icon="@Icons.Material.Filled.PrivacyTip" Color="Color.Inherit" Edge="Edge.End" />
                <MudLink Color="Color.Default" Href="https://netlockrmm.com/privacy.html" Target="_blank" Class="ml-1">Privacy Policy</MudLink>
            </MudAppBar>

        </MudLayout>

    </NotAuthorized>
</AuthorizeView>

