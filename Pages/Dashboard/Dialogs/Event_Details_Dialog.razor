        <MudTextField Label="Melder" T="string" @bind-Value="@reported_by" Required="false" RequiredError="Erforderlich" Immediate="@true" ReadOnly="true" />
        <MudTextField Label="Event" T="string" @bind-Value="@_event" Required="false" RequiredError="Erforderlich" Immediate="@true" ReadOnly="true" />
        <MudTextField Label="Beschreibung" T="string" Lines="20" @bind-Value="@description" Required="false" RequiredError="Erforderlich" Immediate="@true" ReadOnly="true" />
       
    </DialogContent>
